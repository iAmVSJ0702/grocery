<header class="header navbar">
  <section class="container">
    <nav class="nav">
      <figure class="logo">
        <%= link_to icon('fa-solid', 'cart-shopping','Grocery App'), root_path%>
      </figure>
      <input type="checkbox" id="nav-toggle" class="nav-toggle">
      <label for="nav-toggle" class="nav-toggle-lable">
        <%= icon('fa-solid', 'bars')%>
      </label>
      <ul class="menu">
        <li class='nav-item'><%= link_to 'Home', root_path, class: 'nav-link' %></li>
        <% if logged_in?  %>
          <li class='nav-item'><%= link_to 'MyAccount', current_user, class: 'nav-link' %></li> 
          <li class='nav-item'><%= link_to 'My Cart', cart_path, class: 'nav-link' %></li> 
          <li class='nav-item'><%= link_to 'Admin', admin_index_path, class: 'nav-link' if is_admin? %></li> 
          <li class='nav-item'><%= link_to 'LogOut', logout_path, class: 'nav-link' %></li>
        <% else %>
          <li class='nav-item'><%= link_to 'LogIn', login_path, class: 'nav-link' %></li>  
          <li class='nav-item'><%= link_to 'SignIn', new_user_path, class: 'nav-link' %></li> 
        <% end %>
      </ul>
    </nav>
  </section>
</header>