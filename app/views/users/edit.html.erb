<%= notice %>
<div class="create-user">
	<%= form_for(@my_user) do |f| %>
		<% if @my_user.errors.any? %>
			<div id="error_explanation">
				<h4><%= pluralize(@my_user.errors.count, "error") %> prohibited you from updating your details</h4>

				<ul>
				<% @my_user.errors.full_messages.each do |message| %>
					<li> <%= message %></li>
				<% end %>
				</ul>
			</div>
		<% end %>

		<div class="field form-group row">
			<%= f.label :name, class: "col-sm-2 col-sm-offset-1 col-form-label" %>
			<div class="col-sm-8">
				<%= f.text_field :name, class: "form-control" %>
			</div>
		</div>
		<div class="field form-group row">
			<%= f.label :email , class: "col-sm-2 col-sm-offset-1  col-form-label"  %>
			<div class="col-sm-8">
				<%= f.text_field :email , class: "form-control"%>
			</div>
		</div>
		<div class="field form-group row">
			<%= f.label :phone , class: "col-sm-2 col-sm-offset-1  col-form-label" %>
			<div class="col-sm-8">
				<%= f.text_field :phone , class: "form-control" %>
			</div>
		</div>
		<div class="field form-group row">
			<%= f.label :address , class: "col-sm-2 col-sm-offset-1  col-form-label" %>
			<div class="col-sm-8" >
				<%= f.text_area :address , class: "form-control" %>
			</div>
		</div>
		<div class="actions form-group row">
			<div class="col-sm-5 col-sm-offset-5">
				<%= f.submit "Update Profile" ,class: "btn btn-success" %>
			</div>
		</div>
		<% unless is_admin? %>
			<h4 class="text-center">Update password</h4>
			<div class="field form-group row">
				<%= f.label :Old_Password , class: "col-sm-2 col-sm-offset-1  col-form-label" %>
				<div class="col-sm-8">
					<%= f.password_field :Old_Password , class: "form-control" %>
				</div>
			</div>
			<div class="field form-group row">
				<%= f.label :password , class: "col-sm-2 col-sm-offset-1  col-form-label" %>
				<div class="col-sm-8">
					<%= f.password_field :password , class: "form-control" %>
				</div>
			</div>
			<div class="actions form-group row">
			<div class="col-sm-5 col-sm-offset-5">
				<%= f.submit "Change Password" ,class: "btn btn-success" %>
			</div>
		</div>
		<% end %>
	<% end %>
</div>