<% if @subcategories.present?%>
    <%= turbo_stream.replace "category_subcategories_list" do %>
        <div class="auto-update" id="category_subcategories_list">
            <label class="auto-update mb-2 mt-3">Subcategories:<br></label>
            <select class="auto-update" name="item[subcategory]" id="iten_subcategory" data-controller="brands">
                <% @subcategories.each do |subcategory| %>
                    <option value="<%= subcategory.id %>"><%= subcategory.name %></option>
                <% end %>
            </select>
        </div>
    <% end %>
<% end %>