<div class="center">
  <h3 class="text-center add-element">Add new Subcategory for <%= @catname %> </h3><br>
  <%= form_for(@subcategory) do |f| %>
  	<div class= "field" >
      <%= f.hidden_field :category ,value: @category[:id] %>
  		<label>Name:</label><br>
  		<%= f.text_field :name %>
      <div class="notice"><%= notice %></div><br>
  		<%= f.submit :Create , class: "btn btn-success"  %><br><br><br>
  	</div>
  <% end %><br><br>
  <table class="card">
    <thead>
      <tr>
        <th>Subcategory Name</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
    	<% @subcategories.each do |subcat| %>
        <tr>
          <td scope="row"><%= subcat[:name] %></td>
          <td> <%= link_to icon('fa-solid', 'pen') , edit_subcategory_path(subcat.id) %> / <%= delete_link(subcategory_path(subcat)) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>