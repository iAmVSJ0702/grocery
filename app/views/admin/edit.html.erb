<h4>
	<%= link_to "Admin Dashboard" , admin_index_path, method: "get" , class: "btn btn-success" %>
</h4>
<br>
<br>
<%= form_for(current_user , url: admin_path(current_user[:id]) , method: "put" ) do |f| %>
	<div class="field form-group row">
		<%= label_tag :old_password , nil , class: "col-sm-2 col-sm-label" %>
			<div class="col-sm-4">
				<%= password_field_tag :oldpassword , nil ,class: "form-control" %>
			</div>
	</div>
	<div class="field form-group row">
		<%= f.label :New_password , class: "col-sm-2 col-sm-label" %>
			<div class="col-sm-4">
				<%= f.password_field :password , class: "form-control" %>
			</div>
	</div>
	<div class="action">
		<%= f.submit "Change" , class: "btn btn-success" %>
	</div>
<% end %>