<h3 class="text-center">Login</h3>
<h4><%= notice %></h4>

<div class="create-user">
	<%= form_for(:user , url: sessions_path) do |f| %>
		<div class="field form-group row">
			<%= f.label :email , class: "col-sm-2 col-sm-offset-1  col-form-label"  %>
			<div class="col-sm-8">
				<%= f.text_field :email , class: "form-control"%>
			</div>
		</div>
		<div class="field form-group row">
			<%= f.label :password , class: "col-sm-2 col-sm-offset-1  col-form-label" %>
			<div class="col-sm-8">
				<%= f.password_field :password , class: "form-control" %>
			</div>
		</div>
		<div class="actions form-group row">
			<div class="col-sm-5 col-sm-offset-5">
				<%= f.submit "Login" ,class: "btn btn-success" %>
			</div>
		</div>
	<% end %>
</div>
<div>
	Not a member ? <%= link_to("Sign Up", new_user_path ) %>
</div>
